{% extends "layout.njk" %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Portf√≥lio - Gustavo Azevedo</title>
{% endblock %}

{% block content %}
    <main>
        <div class=" my-5 text-center">
            <h1 class=" text-white title">Trabalhos</h1>
        </div>

        <div class=" text-white kards ">

            {% for item in items%}
                <div class=" kard" id="{{item.id}}">
                    <div class="kard-container {{'featured-wrapper' if item.featured}}">
                        <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="imagem de {{item.title}}">
                        {% if item.featured %}
                            <div class="featured">Featured</div>
                        {% endif %}
                    </div>
                    <div class=" kard-content">
                        <p>{{item.title}}</p>
                    </div>
                    <div class=" kard-info">
                        <p>{{item.duration}}</p>
                        <p class=" kard-price">{{item.price}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

    </main>

    <script src="./script.js"></script>
{% endblock %}